@article{10.1016/j.astropartphys.2010.06.003, 
year = {2010}, 
title = {{GZK neutrinos after the Fermi-LAT diffuse photon flux measurement}}, 
author = {Ahlers, M and Anchordoqui, L.A. and Gonzalez–Garcia, M.C. and Halzen, F and Sarkar, S}, 
journal = {Astroparticle Physics}, 
